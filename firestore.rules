rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users collection - users can read all profiles but only write their own
    match /users/{userId} {
      allow read: if true;

      // Allow users to write their own profile
      allow write: if request.auth != null && request.auth.uid == userId;

      // Allow updating follower/following counts when someone follows/unfollows
      allow update: if request.auth != null
                    && (
                      // User updating their own profile
                      request.auth.uid == userId
                      // OR incrementing/decrementing follower counts only
                      || (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['followersCount', 'followingCount', 'postsCount']))
                    );

      // Followers subcollection - who follows this user
      match /followers/{followerId} {
        // Anyone can read followers
        allow read: if true;

        // Only the follower can create their follow relationship
        allow create: if request.auth != null
                      && request.auth.uid == followerId
                      && request.resource.data.followerId == followerId
                      && request.resource.data.followerUsername is string
                      && request.resource.data.createdAt is timestamp;

        // Allow the follower to delete their own follow OR the user to delete from their own followers list
        allow delete: if request.auth != null
                      && (request.auth.uid == followerId || request.auth.uid == userId);
      }

      // Following subcollection - who this user follows
      match /following/{followingId} {
        // Anyone can read following
        allow read: if true;

        // Only the user themselves can create their following relationships
        allow create: if request.auth != null
                      && request.auth.uid == userId
                      && request.resource.data.followingId == followingId
                      && request.resource.data.followingUsername is string
                      && request.resource.data.createdAt is timestamp;

        // Allow the user to delete their own following OR the followed user to remove them
        allow delete: if request.auth != null
                      && (request.auth.uid == userId || request.auth.uid == followingId);
      }

      // Search history subcollection - user's recent searches
      match /searchHistory/{searchedUserId} {
        // Only the user can read their own search history
        allow read: if request.auth != null && request.auth.uid == userId;

        // Only the user can write to their own search history
        allow write: if request.auth != null && request.auth.uid == userId;
      }

      // Notifications subcollection - user's notifications
      match /notifications/{notificationId} {
        // Only the user can read their own notifications
        allow read: if request.auth != null && request.auth.uid == userId;

        // Only the user can update/delete their own notifications
        allow update, delete: if request.auth != null && request.auth.uid == userId;

        // Any authenticated user can create notifications (for others)
        allow create: if request.auth != null
                      && request.resource.data.type in ['follow', 'like', 'comment', 'tag']
                      && request.resource.data.fromUserId is string
                      && request.resource.data.fromUsername is string
                      && request.resource.data.read is bool
                      && request.resource.data.createdAt is timestamp;
      }
    }

    // Posts collection
    match /posts/{postId} {
      // Anyone can read posts
      allow read: if true;

      // Only authenticated users can create posts (max 5 posts per user)
      allow create: if request.auth != null
                    && request.resource.data.userId == request.auth.uid
                    && request.resource.data.keys().hasAll(['userId', 'username', 'mediaUrl', 'mediaType', 'createdAt', 'likes'])
                    && request.resource.data.mediaType in ['image', 'video']
                    && request.resource.data.likes is number
                    && request.resource.data.createdAt is timestamp
                    // Enforce 5-post limit - check user's current post count
                    && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.postsCount < 5;

      // Allow owner to update their posts OR anyone to update likes/commentsCount
      allow update: if request.auth != null
                    && (
                      // Owner can edit their post
                      (resource.data.userId == request.auth.uid
                       && request.resource.data.userId == resource.data.userId
                       && request.resource.data.createdAt == resource.data.createdAt)
                      // Anyone can increment/decrement likes or commentsCount
                      || request.resource.data.diff(resource.data)
                         .affectedKeys().hasOnly(['likes', 'commentsCount'])
                    );

      allow delete: if request.auth != null
                    && resource.data.userId == request.auth.uid;

      // Likes subcollection
      match /likes/{userId} {
        // Anyone can read likes
        allow read: if true;

        // Only the user can create their own like
        allow create: if request.auth != null
                      && request.auth.uid == userId
                      && request.resource.data.userId == userId
                      && request.resource.data.username is string
                      && request.resource.data.likedAt is timestamp;

        // Allow the user to delete their own like OR the post owner to delete any like on their post
        allow delete: if request.auth != null
                      && (request.auth.uid == userId || request.auth.uid == get(/databases/$(database)/documents/posts/$(postId)).data.userId);
      }

      // Comments subcollection
      match /comments/{commentId} {
        // Anyone can read comments
        allow read: if true;

        // Any authenticated user can create a comment
        allow create: if request.auth != null
                      && request.resource.data.userId == request.auth.uid
                      && request.resource.data.username is string
                      && request.resource.data.text is string
                      && request.resource.data.text.size() > 0
                      && request.resource.data.text.size() <= 500
                      && request.resource.data.createdAt is timestamp;

        // Allow the comment author to delete their own comment OR the post owner to delete any comment on their post
        allow delete: if request.auth != null
                      && (request.auth.uid == resource.data.userId || request.auth.uid == get(/databases/$(database)/documents/posts/$(postId)).data.userId);
      }
    }

    // Chats collection
    match /chats/{chatId} {
      // Allow read if user is a participant
      allow read: if request.auth != null
                     && request.auth.uid in resource.data.participants;

      // Allow create if user is one of the participants
      allow create: if request.auth != null
                       && request.auth.uid in request.resource.data.participants
                       && request.resource.data.participants.size() == 2
                       && request.resource.data.keys().hasAll(['participants', 'participantDetails', 'lastMessage', 'lastMessageTimestamp', 'lastMessageSenderId', 'unreadCount', 'createdAt'])
                       && request.resource.data.createdAt is timestamp;

      // Allow update if user is a participant (for updating last message, unread counts)
      allow update: if request.auth != null
                       && request.auth.uid in resource.data.participants;

      // Allow delete if user is a participant
      allow delete: if request.auth != null
                       && request.auth.uid in resource.data.participants;

      // Messages subcollection
      match /messages/{messageId} {
        // Allow read if user is a participant of the chat
        allow read: if request.auth != null
                       && request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants;

        // Allow create if user is a participant and is the sender
        allow create: if request.auth != null
                         && request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants
                         && request.auth.uid == request.resource.data.senderId
                         && request.resource.data.text is string
                         && request.resource.data.text.size() > 0
                         && request.resource.data.text.size() <= 500
                         && request.resource.data.timestamp is timestamp
                         && request.resource.data.read is bool;

        // Allow update if user is a participant (for marking messages as read)
        allow update: if request.auth != null
                         && request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants;

        // Allow delete if user is the sender
        allow delete: if request.auth != null
                         && request.auth.uid == resource.data.senderId;
      }
    }

    // Default: deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
